@model CarFormatModel
@{
    var value = Model.Key != "Detail" ? Model.Dictionary[Model.Key].ToString() : null;
    var name = Model.Dictionary["Name"];
    var brand = Model.Dictionary["Brand"];
    var color = Model.Dictionary["Color"];
    var price = Model.Dictionary["Price"];
    var arrival = (DateTime) Model.Dictionary["CreatedAt"];
    var url = Model.Dictionary["PicUrl"] ?? "";
}

@if (Model.Key == "Price")
{
    <div>@Html.DisplayFor(m => price, "MoneyFormat")</div>
}
else if(Model.Key == "Detail")
{
    <button class="rounded-md bg-[#116D6E] p-2 px-4" onclick="viewCarDetail('@name','@brand','@color','@price','@url','@arrival')">Detail</button>
}
else if(Model.Key == "CreatedAt")
{
    <div>
        @arrival.ToString("dd MMM yyyy") @arrival.TimeOfDay.ToString(@"hh\:mm\:ss")
    </div>
}
else
{
    <div>@value</div>
}