<div onclick="closeModalInfo()" id="ModalInfo" class='px-10 fixed w-screen inset-0 h-screen @(ViewData["message"] != null ? "flex" : "hidden") items-center justify-center z-[10] bg-[rgba(0,0,0,0.5)] transition-all duration-300'>
    <div id="ModalInfoContent" class='bg-[#1e1e1e] text-white flex justify-center items-center gap-6 flex-col p-6 rounded-lg shadow-lg w-full max-w-[400px] transition-all duration-300'>
        <div class="text-[#03C988]">
            <svg xmlns="http://www.w3.org/2000/svg" width="100" height="100" fill="currentColor" class="bi bi-check-circle-fill" viewBox="0 0 16 16">
                <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
            </svg>
        </div>
        <div class="text-lg text-center">@ViewData["Message"]</div>
        <button onclick="closeModalInfo()" class="bg-[#2D4263] w-full hover:scale-105 transition-all duration-300 p-3 mt-2 font-bold rounded-md">Close</button>
    </div>
</div>
<script src="~/js/ModalInfo.js" asp-append-version="true"></script>